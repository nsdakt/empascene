<!DOCTYPE html>
<html>
  <head>
    <title>Empascene</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top" style="background-color:#ffe5cc;">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <!--ロゴ-->
          <span class: "navbar-brand">
            <% if user_signed_in? %>
              <%= link_to posts_path do %>
                <%= image_tag 'empascene_logo.png', :size => '130x100' %>
              <% end %>
            <% else %>
              <%= link_to root_path do %>
               <%= image_tag 'empascene_logo.png' , :size => '130x100' %>
              <% end %>
            <% end %>
          </span>
          <!--ハンバーガーメニュー-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
    　          <%= link_to ' home', posts_path, class: "fas fa-icons" %>
              </li>
              <li>
    　          <%= link_to ' myrecord', user_path(current_user.id), class: "fas fa-compact-disc" %>
    　         </li>
            　  <%= link_to 'write', new_post_path, class: "fas fa-sliders-h" %>
              </li>
              <li>
               <%= link_to "byebye", destroy_user_session_path, method: :delete, class: "fas fa-door-open" %>
              </li>
            <% else %>
              <li>
            　   <%= link_to 'Home', root_path, class: "fas fa-home" %>
              </li>
              <li>
            　   <%= link_to 'About', home_about_path, class: "fas fa-heartbeat" %>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "Login", new_user_session_path, class: "fas fa-door-closed" %>
              </li>
            <% end %>
          </div>
        </div>
      </nav>
      <% unless controller.controller_name == 'homes' && controller.action_name == 'top' %>
       <div class="center">

         </div>
      <% end %>
    </header>
    <main>
     <%= yield %>
    </main>

    <% if user_signed_in? %>
      <footer style="background-color:#FFCC99;">
        <div class="row">
          <div class="mx-auto">
            <br >
            <p>©️ A-kit.planning</p>
            <br >
          </div>
        </div>
      </footer>
    <% else %>
      <footer class="fixed-bottom" style="background-color:#FFCC99;">
        <div class="row">
          <div class="mx-auto">
            <br >
            <p class="text-right">©️ A-kit.planning</p>
            <br >
          </div>
        </div>
      </footer>
    <% end %>
  </body>
</html>
