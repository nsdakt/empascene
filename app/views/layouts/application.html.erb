<!DOCTYPE html>
<html>
  <head>
    <title>Empascene</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!--<body>-->
  <body>
    <!--ヘッダー-->
    <header class="sticky-top" style="background-color:#ffffff;">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <!--ロゴ-->
          <span class: "navbar-brand">
            <% if user_signed_in? %>
              <%= link_to posts_path do %>
                <%= image_tag 'empascene_logo.png', :size => '120x90' %>
              <% end %>
            <% else %>
              <%= link_to root_path do %>
               <%= image_tag 'empascene_logo.png' , :size => '120x90' %>
              <% end %>
            <% end %>
          </span>

          <!--ハンバーガーメニュー-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="navbar-collapse collapse show" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <!--ログイン時-->
            <% if user_signed_in? %>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to posts_path do %>
                   <i class="fas fa-icons"></i> home
                  <% end %>
                </b>
              </li>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to home_about_path do %>
                   <i class="fas fa-heartbeat"></i> about
                  <% end %>
                </b>
              </li>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to user_path(current_user.id) do %>
                   <i class="fas fa-compact-disc"></i> myrecord
                  <% end %>
                </b>
              </li>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to new_post_path do %>
                   <i class="fas fa-sliders-h"></i> write
                  <% end %>
                </b>
              </li>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to ' logout', destroy_user_session_path, method: :delete, class: "fas fa-door-open" %>
                </b>
              </li>
            <% else %>
            <!--ログイン前-->
              <li style="margin-right:20px;">
                <b>
                  <%= link_to root_path do %>
                   <i class="fas fa-home"></i> Home
                  <% end %>
                </b>
              </li>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to home_about_path do %>
                   <i class="fas fa-heartbeat"></i> About
                  <% end %>
                </b>
              </li>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to new_user_registration_path do %>
                   <i class="fas fa-sign-in-alt"></i> Signup
                  <% end %>
                </b>
              </li>
              <li style="margin-right:20px;">
                <b>
                  <%= link_to new_user_session_path do %>
                   <i class="fas fa-door-closed"></i> Login
                  <% end %>
                </b>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
     <%= yield %>
    </main>

    <% if user_signed_in? %>
      <footer style="background-color:#ffffff;">
        <div class="row">
          <div class="mx-auto">
            <br >
            <p>©️ A-kit.planning</p>
            <br >
          </div>
        </div>
      </footer>
    <% else %>
      <footer class="fixed-bottom" style="background-color:#ffffff;">
        <div class="row">
          <div class="mx-auto">
            <br >
            <p class="text-right">©️ A-kit.planning</p>
            <br >
          </div>
        </div>
      </footer>
    <% end %>
  </body>
</html>
