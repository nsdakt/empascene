<!--コメントフォーム-->
<%= form_with model:[post, post_comment] do |f| %>
<div style="margin:3% 15%;">
  <%= f.text_area :comment, placeholder: "コメント入力（100文字以内）", class: "comment_form" %>
  <br >
</div>
<div class="text-right" style="margin:3% 10%;">
  <%= f.submit "送信する", class: "btn btn-outline-info" %>
</div>
<% end %>
