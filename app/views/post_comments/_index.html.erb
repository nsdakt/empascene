<!--コメント一覧-->
<% post.post_comments.each do |post_comment| %>
  <div>
    <%= attachment_image_tag post_comment.user, :profile_image, :fill, 50, 50, fallback: "default-image.jpg", size:'30x30' %>
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
    <% if post_comment.user == current_user %>
      <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-sm btn-outline-secondary", "data-confirm" => "本当に削除しますか？" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %><br >
    <%= post_comment.comment %>
  </div>
<% end %>