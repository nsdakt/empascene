<!--ログイン後トップ（新着一覧）-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--サイドバー-->
    <!--<div>-->
      <div class="side col-md-4">
       <%= render 'users/sidebar', user: @user %>
      </div>
    <!--</div>-->

    <div class="main col-md-8">
      <!--<div class="main">-->
        <%= flash[:notice] %>
        <%= flash[:success] %>
        <table class="table table-hover table-borderless table-inverse">
          <thead>
            <th class="th-index text-center" style="padding:3%;">
              <span class="index_line" style="font-size:20px;">最新の投稿</span>
            </th>
          </thead>
           <% if @posts.exists? %>
            <% @posts.each do |post| %>
              <!--投稿一覧テンプレート-->
              <%= render 'posts/table_data', post: post %>
            <% end %>
          <% else %>
            <tbody>
              <td class="text-center" style="padding:10% 0;">投稿はまだありません</td>
            </tbody>
          <% end %>
        </table>
      <!--</div>-->
    </div>
  </div>
</div>