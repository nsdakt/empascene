<h2>ログイン後トップページ</h2>
<h3>投稿一覧</h3>

<%= flash[:notice] %>
<%= flash[:success] %>

<div class="container">
    <div class="row">
      <div class="col-md-3">
　　　 <p>プロフィール表示</p>
　　   <%= link_to '投稿する ', new_post_path %>
      </div>

      <div class="row">
    　   <div class="col-md-8">
          <div class="d-flex">
            <% @posts.each do |post| %>
              <table class="table table-hover table-inverse ">
                <tbody>
                    <tr>
                      <td>
                        <p>プロフィール画像</p><p>投稿者名</p>
                        <%= link_to post_path(post.id) do %>
                         <%= post.title %><br>
                         <%= post.song %><br>
                         <%= post.artist %><br>
                         <%= post.body.truncate(20) %><br>
                         <%= attachment_image_tag(post, :post_image, :fill, 150, 150) %>
                        <% end %>
                      </td>
                    </tr>
                </tbody>
              </table>
            <% end %>
          </div>
  　　　　</div>
      </div>
    </div>
  </div>