<%= flash[:notice] %>
<%= flash[:success] %>
<div class="container px-5 px-sm-0">
  <div class="row" style="padding:3%;">
    <!--サイドバー-->
    <div class="col-md-4">
     <%= render 'users/sidebar', user: @user %>
    </div>

    <div class="col-md-7 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
          <th class="text-center" style="padding:3%;">
            新着投稿一覧
          </th>
        </thead>
        <% @posts.each do |post| %>
          <!--投稿内容テンプレート-->
          <%= render 'posts/table_data', post: post %>
        <% end %>
      </table>
    </div>
  </div>
</div>