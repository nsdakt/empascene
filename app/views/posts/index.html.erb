<%= flash[:notice] %>
<%= flash[:success] %>
  <h2>ログイン後トップページ</h2>
  <h3>投稿一覧</h3>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
　　 <%= render 'users/user_info', user: @user %>
　   <%= link_to '投稿する ', new_post_path %>
　   <%= render 'searches/search_form' %>
    </div>

    <div class="col-md-8">
      <table class="table table-hover table-inverse">
        <% @posts.each do |post| %>
          <%= render 'posts/table_data', post: post %>
        <% end %>
      </table>
    </div>
  </div>
</div>