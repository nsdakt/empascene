<div class="container px-5 px-sm-0">
  <div class="row" style="margin:3% 5%;">

    <!--サイドバー-->
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <br >
      <div>
        <%= link_to '投稿する', new_post_path %>
      </div>
      <br >
      <div>
        お気に入り
      </div>
      <br >
      <div>
        <%= render 'searches/search_form' %>
        <br >
        <br >
      </div>
    </div>

    <!--フォロワー一覧-->
    <div class="col-md-8 offset-md-1">
      <% if @users.exists? %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>
                <h3>フォロワー</h3>
              </th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="display:inline;">
                  <%= link_to user_path(user.id) do %>
                    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg", size:"60x60" %>
                    &ensp;
                    <%= user.name %>
                    &emsp;
                    <% if user.introduction.present?%>
                     <%= user.introduction.truncate(24) %>
                    <% else %>
                     <%= user.introduction %>
                    <% end %>
                  <% end %>
                </td>
                <!--フォローボタン-->
                <% unless current_user == user %>
                  <td class="display:inline;">
                    <% if user.followed_by?(current_user) %>
                      <br >
                      <%= link_to "フォロー中", user_relationships_path(user.id), method: :DELETE, class: "btn btn-sm btn-info" %>
                    <% else %>
                      <br >
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :POST, class: "btn btn-sm btn-outline-info" %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
       <p>フォローされているユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>