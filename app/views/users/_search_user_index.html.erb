<!--検索結果一覧(ユーザー)-->
<div class="container px-5 px-sm-0">
  <div class="row" style="margin:3%; padding-bottom:10%;">

    <!--サイドバー-->
    <div class="col-md-4">
      <table class="table">
        <tbody>
          <tr>
            <!--画像、ユーザー名-->
            <td class="text-center" style="padding:20px 10px;">
              <%= link_to user_path(current_user) do %>
                <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg", size:"60x60" %>
                &emsp;
                <%= current_user.name %>
              <% end %>
              &emsp;
              &emsp;
              <!--編集ボタン-->
              <%# if current_user == user %>
                <%= link_to  edit_user_path(current_user), class: "btn btn-outline-secondary" do %>
                 <span class="fas fa-cog"></span>
                <% end %>
              <%# end %>
            </td>
          <tr>
          <tr>
            <!--自己紹介文-->
            <td class="text-center" style="padding:25px 15px;">
              <% if current_user.introduction.present?%>
                 <%=safe_join(current_user.introduction.split("\n"),tag(:br))%>
              <% else %>
               <%= current_user.introduction %>
              <% end %>
            </td>
          </tr>
          <tr>
            <!--フォローフォロワー数-->
            <td class="text-center" style="padding:20px 20px;">
              <%= link_to user_followings_path(current_user.id) do %>
                <%= current_user.followings.count %>フォロー中
              <% end %>
              &emsp;
              |
              &emsp;
              <%= link_to user_followers_path(current_user.id) do %>
                <%=  current_user.followers.count %>フォロワー
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <span class="btn btn-md btn-outline-danger" style="padding-left:5%;">
          <%= link_to favorites_user_path(current_user) do %>
            <i class="fas fa-hand-holding-heart"></i> お気に入り
          <% end %>
        </span>
        &emsp;
        <span class="btn btn-md btn-outline-warning" style="padding-right:5%;">
          <%= link_to new_post_path do %>
           <i class="fas fa-sliders-h"></i> 投稿する
          <% end %>
        </span>
      </div>
      <div class="text-center" style="padding:10% 3%;">
       <%= render 'searches/search_form' %>
       <br >
      </div>
    </div>

    <!--検索結果(ユーザー）-->
    <div class="col-md-7 offset-md-1">
    <% if users.exists? %>
      <table class="table table-hover table-borderless">
        <tbody>
        <% users.each do |user| %>
            <tr>
              <!--プロフィール画像-->
              <td style="padding:20px 15px;">
                <%= link_to user_path(user.id) do %>
                 <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "default-image.jpg", size: "60x60" %>
                <% end %>
              </td>
              <!--ユーザー名-->
              <td style="padding:20px 15px;">
                <%= link_to user.name, user_path(user.id) %>
              </td>
              <!--自己紹介文-->
              <td  style="padding:20px 15px;">
                <% if user.introduction.present?%>
                   <%=safe_join(user.introduction.split("\n"),tag(:br))%>
                <% else %>
                 <%= user.introduction %>
                <% end %>
              </td>
              <!--フォローボタン-->
              <td style="padding:20px 15px;">
                <% unless current_user == user %>
                  <% if user.followed_by?(current_user) %>
                   <%= link_to 'フォロー中', user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-info" %>
                  <% else %>
                   <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-outline-info" %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
     <p>一致する検索結果はありません</p>
    <% end %>
    <div class="text-right">
     <%= link_to " もどる", 'javascript:history.back()', class: "fas fa-reply text-right" %>
    </div>
  </div>
</div>