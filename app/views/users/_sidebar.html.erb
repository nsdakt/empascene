<!--サイドバー-->
<table class="table">
  <tbody>
    <tr>
      <td class="text-center" style="padding:10px 5px;">
        <!--画像、ユーザー名-->
        <%= link_to user_path(user.id) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg", size:"60x60" %>
          &emsp;
          <%= user.name %>
        <% end %>
          &emsp;
          &emsp;
        <% if current_user == user %>
          <!--編集ボタン-->
          <%= link_to  edit_user_path(user), class: "btn btn-outline-secondary" do %>
           <span class="fas fa-cog"></span>
          <% end %>
        <% else %>
          <!--フォローボタン-->
          <% if user.followed_by?(current_user) %>
            <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-info" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-outline-info" %>
          <% end %>
        <% end %>
      </td>
    <tr>
    <tr>
      <td class="text-center" style="padding:25px 15px;">
        <!--自己紹介文-->
        <% if user.introduction.present?%>
          <%=safe_join(user.introduction.split("\n"),tag(:br))%>
        <% else %>
         <%= user.introduction %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="text-center" style="padding:20px 20px;">
        <!--フォローフォロワー数-->
        <%= link_to user_followings_path(user.id) do %>
          <%= user.followings.count %>フォロー中
        <% end %>
        &emsp;
        |
        &emsp;
        <%= link_to user_followers_path(user.id) do %>
          <%=  user.followers.count %>フォロワー
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<div style="padding:3%;">
  <%= link_to 'お気に入り', favorites_user_path(@user), class: "btn btn-block btn-outline-warning" %>
</div>

