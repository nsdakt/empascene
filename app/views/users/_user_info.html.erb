
<table class="table">
  <tbody>
    <tr>
      <th>
       <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg", size:"60x60" %>
       <%= user.name %>
      </th>
    <tr>
    <tr>
      <th>
       <%= user.introduction %>
      </th>
    </tr>
    <tr>
      <th>
        0フォロー ｜ 0フォロワー
      </th>
    </tr>
    <tr>
      <% unless current_user == user %>
        <% if user.followed_by?(current_user) %>
          <th>
           <%= link_to "フォローを外す", user_relationships_path(user.id), method: :DELETE, class: "btn btn-sm btn-outline-info" %>
          </th>
        <% else %>
          <th>
           <%= link_to "フォローする", user_relationships_path(user.id), method: :POST, class: "btn btn-sm btn-outline-success" %>
          </th>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>
<div class="row">
    <% if current_user == user %>
      <%= link_to  edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
       <span class="fas fa-user-cog"></span>
      <% end %>
    <% end %>
</div>
