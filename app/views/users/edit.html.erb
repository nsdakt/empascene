<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 ma-auto">
      <h2>プロフィール編集</h2>
      <%= flash[:warning] %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputProfileImage">プロフィール画像</label>
          <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50 %>
        </div>
        <div class="form-group">
          <label for="inputName">アカウント名</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">自己紹介</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>