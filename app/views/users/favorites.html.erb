<div class="container px-5 px-sm-0">
  <div class="row">

    <!--サイドバー-->
    <div class="side col-md-4">
     <%= render 'users/sidebar', user: @user %>
    </div>

    <div class="main col-md-8">
      <table class="table table-hover table-borderless table-inverse">
        <thead>
          <th class="th-index text-center">
            <span class="favo_line" style="font-size:20px;">
              お気に入りした投稿
            </span>
            <span class="back-right"  style="font-size:13px;">
           　  <%= link_to " もどる", 'javascript:history.back()', class: "fas fa-reply text-right" %>
          　</span>
          </th>
      　<% if @favorite_posts.present? %>
          <%= render partial: "posts/table_data", collection: @favorite_posts, as: "post" %>
        <% else %>
          <tbody>
            <td class="text-center" style="padding:10% 0;">お気に入りした投稿はまだありません</td>
          </tbody>
        <% end%>
      </table>
    </div>
  </div>
</div>