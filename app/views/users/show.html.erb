<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row" style="margin:3%;">
    <!--サイドバー-->
    <div class="col-md-3">
     <%= render 'users/user_info', user: @user %>
     <br >
     <div>
       <%= link_to '投稿する ', new_post_path %>
     </div>
    <br >
    <div>
     お気に入り
    </div>
    <br >
    <%= render 'searches/search_form' %>
      <br >
      <br >
    </div>

    <!--投稿一覧-->
    <div class="col-md-8 offset-md-1">
      <br >
      <h2 class="text-center", style="mergin:5%;">自分の投稿</h2>
      <% if @posts.exists? %>
        <table class="table table-hover table-inverse">
          <% @posts.each do |post| %>
            <!--投稿一覧テンプレート-->
            <%= render 'posts/table_data', post: post %>
          <% end %>
        </table>
      <% else %>
        <p>投稿はまだありません</p>
      <% end %>
    </div>
  </div>