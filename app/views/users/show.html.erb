<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">

    <!--サイドバー-->
    <div class="side col-md-4">
     <%= render 'users/sidebar', user: @user %>
    </div>

    <!--投稿一覧-->
    <div class="main col-md-8">
      <!--<div class="main">-->
      <%= flash[:notice] %>
      <%= flash[:success] %>
      <table class="table table-hover table-borderless table-inverse">
        <thead>
          <th class="th-index text-center">
            <span class="myindex_line" style="font-size:20px;">
              <%= @user.name %>の投稿
            </span>
            <span class="back-right"  style="font-size:13px;">
           　  <%= link_to " homeへ", posts_path, class: "fas fa-reply text-right" %>
          　</span>
          </th>
        </thead>
        <% if @posts.exists? %>
          <% @posts.each do |post| %>
            <!--投稿一覧テンプレート-->
            <%= render 'posts/table_data', post: post %>
          <% end %>
          <%#= paginate post %>
        <% else %>
          <tbody>
            <td class="text-center" style="padding:10% 0;">投稿はまだありません</td>
          </tbody>
        <% end %>
      </table>
      <div style="padding-left:20%;">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>